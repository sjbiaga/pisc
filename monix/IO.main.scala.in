//package main.scala.in

import _root_.monix.execution.Scheduler.Implicits.global


object App extends _root_.cats.effect.IOApp:

  import _root_.cats.effect.ExitCode

  override def run(args: List[String]) =
    π.Main[π.F](args*).completedL.as(ExitCode.Success)


object π:

  import _root_.scala.concurrent.duration.*

  import _root_.cats.syntax.all.*

  import _root_.cats.effect.{ Concurrent, ContextShift, Timer }
  import _root_.cats.effect.concurrent.Semaphore

  import _root_.monix.eval.{ TaskLift, TaskLike }
  import _root_.monix.reactive.{ Observable => πObs }
  import _root_.monix.tail.Iterant

  import _root_.eu.timepit.refined.*

  extension [F[_]: Concurrent: TaskLift: TaskLike](self: πObs[Iterant[F, ?]])
    private[π] inline def πmapParF: Iterant[F, Unit] =
      Iterant.liftF(self.mapParallelUnorderedF(Int.MaxValue)(_.completedL).completedF[F])
    private[π] inline def πmapParF(semaphore: Semaphore[F]): Iterant[F, Unit] =
      Iterant.liftF(self.mapParallelUnorderedF(Int.MaxValue)(Iterant.liftF(semaphore.tryAcquire).ifM(_, Iterant.empty).completedL).completedF[F])

  import Π.*


