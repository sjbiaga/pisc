import _root_.akka.actor.typed.ActorSystem
import _root_.akka.actor.typed.Behavior
import _root_.akka.actor.typed.scaladsl.Behaviors


object App:

  private def apply(args: Array[String]): Behavior[Unit] =
    Behaviors.setup[Unit] { context =>
      val main = context.spawnAnonymous(π.Main(args.toList))
      Behaviors.receiveMessage { _ =>
        main ! π.πNone
        Behaviors.empty
      }
    }

  def main(args: Array[String]): Unit =
    val system = ActorSystem[Unit](this(args), "Pi")
    system ! ()


object π:

  import _root_.java.util.concurrent.{ Semaphore => πSem }
  import _root_.java.util.concurrent.atomic.{ AtomicBoolean => πAB }
