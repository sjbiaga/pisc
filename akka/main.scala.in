//package main.scala.in

import _root_.akka.actor.typed.ActorSystem
import _root_.akka.actor.typed.Behavior
import _root_.akka.actor.typed.scaladsl.Behaviors


object App:

  private val spicsp = "pisc.stochastic.communications.parallelism.level"

  import _root_.scala.collection.immutable.Map
  import `Π-dump`.Dump
  import `Π-loop`.{ +, Loop }
  import π.{ `π-main`, `π-uuid`, `π-wand`, Main }

  private def apply(args: Array[String]): Behavior[Either[Unit, Unit]] =
    val p = if sys.Prop.IntProp(spicsp).isSet
            then sys.Prop.IntProp(spicsp).value
            else π.`π-parallelism`
    Behaviors.setup[Either[Unit, Unit]] { context =>
      val % : Map[String, Int | +] = `π-main`.foldLeft(Map.empty)(_.updated(_, 1))
      val dump = context.spawnAnonymous(Dump())
      val loop = context.spawnAnonymous(Loop(1 max p)(dump)(%))
      val main = context.spawnAnonymous(Main(args.toList)(using `π-uuid`)(using loop))
      Behaviors.receiveMessage {
        case Left(_) =>
          loop ! Loop.Trigger
          main ! π.πNone
          Behaviors.same
        case Right(_) =>
          Behaviors.stopped
      }
    }

  def main(args: Array[String]): Unit =
    val system = ActorSystem[Either[Unit, Unit]](this(args), "StochasticPi")
    system ! Left(())


