  private lazy val πSleepSem = πSem(0)
  def πsleep(pace: Long, unit: TimeUnit) = πSleepSem.tryAcquire(pace, unit)

  val DAY         = DAYS
  val MINUTE      = MINUTES
  val HOUR        = HOURS
  val SECOND      = SECONDS
  val MILLISECOND = MILLISECONDS
  val MICROSECOND = MICROSECONDS
  val NANOSECOND  = NANOSECONDS

  type Π = Either[Option[πAB], Behavior[Π]]

  val πNone: Π = Left(None)

  extension (self: πLs[ActorRef[Π]])
    private[π] inline def πforeach(it: Option[πAB] = None): Unit =
      self.foreach(_ ! Left(it))

  import Π.*


