import _root_.cats.effect.Deferred
import _root_.cats.effect.std.{ Queue, Semaphore }

import _root_.zio.interop.catz.*
import _root_.zio.stream.interop.fs2z.*


implicit val πTaskConsoleInstance: _root_.cats.effect.std.Console[zio.Task] =
  _root_.cats.effect.std.Console.make[zio.Task]


object App extends CatsApp:

  private val spicsp = "pisc.stochastic.communications.parallelism.level"


  import _root_.scala.collection.immutable.{ List, Map }

  import _root_.cats.effect.Ref

  import _root_.zio.{ ExitCode, Task, ZIOAppArgs, ZIO }
  import _root_.zio.stream.ZStream

  import `Π-dump`.*
  import `Π-loop`.*


  private def run(args: List[String])(% : %[Task], / : /[Task], * : *[Task], - : -[Task], ! : ![Task], & : &[Task], ~ : ~[Task]) =
    val lπ = πloop[Task]()
    val dπ = πdump[Task]()
    val mπ = π.πmain[Task]()
    ( for
        ^ <- ZStream.fromZIO(π.`π-uuid`[Task])
        _ <- mπ.Main(args*)(using ^)(using %, /, () => *.offer(())).toZStream[Any]()
        x <- ZStream.fromZIO(!.get)
        _ <- ZStream.fromZIO(exit(ExitCode(x.code)))
      yield
        ()
    )
      .drainFork(ZStream.fromZIO(lπ.loop(using %, !, &, ~, -, *)(π.`π-wand`)))
      .drainFork(ZStream.fromZIO(lπ.poll(using %, /, *)))
      .drainFork(ZStream.fromZIO(dπ.dump(using %, !, -)))
      .runDrain

  override def run: ZIO[ZIOAppArgs, Throwable, Unit] =
    val p = if sys.Prop.IntProp(spicsp).isSet
            then sys.Prop.IntProp(spicsp).value
            else π.`π-parallelism`
    for
      args <- getArgs
      % <- Ref[π.F].of(Map[String, Int | (Boolean, +[π.F])]())
      / <- Queue.unbounded[π.F, ((String, String), +[π.F])]
      * <- Queue.unbounded[π.F, Unit]
      - <- Queue.unbounded[π.F, List[String] | (Long, ((Long, Long), Long), (String, String), (Double, Double))]
      ! <- Deferred[π.F, _root_.cats.effect.ExitCode]
      & <- Ref[π.F].of(0L)
      ~ <- Semaphore[π.F](p)
      _ <- sΠ.`π-enable`[π.F](π.`π-main`)(using %)
      _ <- run(args.toList)(%, /, *, -, !, &, ~)
    yield
      ()


object π:

  import _root_.scala.collection.immutable.{ List => πLs }
  import _root_.scala.concurrent.duration.*

  import _root_.cats.{ Functor, Parallel }
  import _root_.cats.syntax.all.*

  import _root_.cats.effect.{ Async, Concurrent }
  import _root_.cats.effect.std.{ CyclicBarrier, UUIDGen }

  import _root_.fs2.Stream

  import _root_.eu.timepit.refined.*

  import sΠ.*

  import `Π-loop`.{ %, /, \ }
  import `Π-stats`.{ ∞, `ℝ⁺`, ⊤ }


  extension [F[_]: Concurrent: Parallel](self: πLs[Stream[F, ?]])
    private[π] inline def πparSequence: Stream[F, Unit] =
      Stream.eval(self.map(_.compile.drain).parSequence.void)

  def `π-uuid`[F[_]: Functor: UUIDGen]: F[String] =
    UUIDGen.randomString[F]


