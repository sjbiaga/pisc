//package main.scala.in


object App extends _root_.cats.effect.IOApp:

  import _root_.scala.collection.immutable.Map

  import _root_.cats.effect.{ ExitCode, IO, Deferred, Ref }
  import _root_.cats.effect.std.{ Queue, Semaphore }

  import `Π-dump`.*
  import `Π-loop`.*

  private val spicsp = "pisc.stochastic.communications.parallelism.level"

  private def run(args: List[String])(% : %[IO], / : /[IO], * : *[IO], - : -[IO], ! : ![IO], & : &[IO], ~ : ~[IO]) =
    val lπ = πloop[IO]()
    val dπ = πdump[IO]()
    val mπ = π.πmain[IO]()
    ( for
        _ <- lπ.loop(using %, !, &, ~, -, *)(π.`π-wand`).background
        _ <- lπ.poll(using %, /, *).background
        _ <- dπ.dump(using %, !, -).background
      yield
        ()
    ).use { _ =>
      for
        _ <- mπ.Main(args*)(using π.`π-uuid`)(using %, /, () => *.offer(())).compile.drain
        x <- !.get
      yield
        x
    }

  override def run(args: List[String]) =
    val p = if sys.Prop.IntProp(spicsp).isSet
            then sys.Prop.IntProp(spicsp).value
            else π.`π-parallelism`
    for
      % <- Ref[π.F].of(Map[String, Int | (Boolean, +[π.F])]())
      / <- Queue.unbounded[π.F, ((String, String), +[π.F])]
      * <- Queue.unbounded[π.F, Unit]
      - <- Queue.unbounded[π.F, List[String] | (Long, ((Long, Long), Long), (String, String), (Double, Double))]
      ! <- Deferred[π.F, ExitCode]
      & <- Ref[π.F].of(0L)
      ~ <- Semaphore[π.F](p)
      _ <- sΠ.`π-enable`[π.F](π.`π-main`)(using %)
      x <- run(args)(%, /, *, -, !, &, ~)
    yield
      x


object π:

  import _root_.java.util.UUID

  import _root_.scala.collection.immutable.{ List => πLs }
  import _root_.scala.concurrent.duration.*

  import _root_.cats.Parallel
